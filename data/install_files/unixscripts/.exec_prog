#!/bin/csh -f
#_______________________________________________________________________________
#
# OpenTect: execution of batch programs on the command line.
# $Id$
#_______________________________________________________________________________

if ( ! $?CSHCMD ) then
    setenv CSHCMD ""
endif

unsetenv DTECT_APPL
source "__INST_DIR__/bin/init_dtect" >&! /dev/null

if ( $status != 0 ) then
    exit 1
endif

if ( $HDIR != mac && ! -e "${bindir}/../lib" ) then
    echo "${bindir}/../lib does not exist"
    echo "Please check your installation."
    echo "The application can however continue normally."
endif

$CSHCMD "__INST_DIR__/bin/od_exec" $*

