#!/bin/csh

if ( $#argv == 0 ) then
	set tagfils=`echo *.tag`
else
	set tagfils="$*"
endif

foreach tf ( $tagfils )
	set dir=$tf:r
	cd $dir
	echo -n "$dir "

	foreach fil ( *.html )
		echo -n "."

		sed 's/\/dsk\/d28\/dev\/od\/doc\/Programmer\/Generated/../g' $fil > $fil.tmp
		\mv -f $fil.tmp $fil

	end

	echo ""
	cd ..
end
